<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#666666"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.dtcc.spaol1.phrasedatabasemanager.MainActivity">

    <TextView
        android:id="@+id/textView10"
        android:text="@string/phrase_manager"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:textStyle="normal|bold"
        android:textSize="24sp"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/tvPhraseList"
        android:layout_marginEnd="36dp" />

    <Button
        android:id="@+id/btnAddPhrase"
        android:text="@string/add_a_phrase"
        android:layout_width="200dp"
        android:layout_height="115dp"
        android:textSize="24sp"
        android:layout_marginRight="20dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView10"
        android:layout_toStartOf="@+id/tvPhraseList" />

    <Button
        android:id="@+id/btnDeletePhrase"
        android:text="@string/delete_a_phrase"
        android:layout_width="200dp"
        android:layout_height="115dp"
        android:textSize="24sp"
        android:layout_marginRight="20dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/btnAddPhrase"
        android:layout_toStartOf="@+id/tvPhraseList"/>

    <Button
        android:id="@+id/btnEditPhrase"
        android:text="@string/edit_a_phrase"
        android:layout_width="200dp"
        android:layout_height="115dp"
        android:textSize="24sp"
        android:layout_marginRight="20dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/btnDeletePhrase"
        android:layout_toStartOf="@+id/tvPhraseList"/>

    <Button
        android:id="@+id/btnUpdatePhraseList"
        android:text="@string/update_phrase_list"
        android:layout_width="200dp"
        android:layout_height="115dp"
        android:textSize="24sp"
        android:layout_marginRight="20dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/btnEditPhrase"
        android:layout_toStartOf="@+id/tvPhraseList"/>

    <TextView
        android:id="@+id/tvPhraseList"
        android:layout_width="600dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:background="#ffffff"
        android:textSize="20sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
